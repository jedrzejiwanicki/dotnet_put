@model CreateBookViewModel

@await Component.InvokeAsync("Navbar")

<div class="w-100 justify-content-center d-flex align-items-center">
    <form method="POST" asp-action="CreateBook" asp-controller="Books" class="w-50">
        <div class="form-group">
            <label for="author">Select author</label>
            <select multiple  id="author" class="form-control" asp-for="AuthorId">
                @foreach(var author in @Model.Authors)
                {
                    <option value="@author.Id">@author.Name</option>
                }
            </select>
        </div>
        
        <div class="form-group">
            <label for="title">Select author</label>
            <input id="title" class="form-control" asp-for="BookTitle" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>