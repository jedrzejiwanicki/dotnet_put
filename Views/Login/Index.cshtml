@model LoginViewModel;

@await Component.InvokeAsync("Navbar")

<div class="w-100 justify-content-center d-flex align-items-center">
    <form asp-controller="Login" asp-action="Index" method="POST" class="w-50 h-50 d-flex justify-content-center flex-column">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username" asp-for="Username">
            <span class="alert-danger" asp-validation-for="Username"></span>
        </div>
        
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password">
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
     </form>
</div>